extends controllerlayout
block content
  div.fullscreen(ng-app="" ng-init="clicked=false")
    div.col-md-12.text-center.bg-now.mainbutton
      div.tbcell(
        onclick = 'setstate({top:'+(now + 1)+',verb:'+states.STOPPED+'})'
        ng-click="clicked=true")
        h1.yuuuge= now
        h1= nowText
        p {{foo}}
    block bottomrow
    div.fullscreen(
      style="position:absolute;top:0;background-color:pink;"
      ng-style="{opacity : clicked ? '0.5' : '0.0', 'pointer-events': clicked ? 'auto' : 'none'}")
