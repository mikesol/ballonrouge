extends controllerlayout
block content
  div.fullscreen(ng-app="redballoon" ng-controller="MainCtrl")
    div.col-md-12.text-center.bg-now.mainbutton.maketable
      - var next = now + 1
      div.tbcell(ng-click = "setstate({top:"+next+",verb:"+states.STOPPED+"})")
        h1.yuuuge= now
        h1= nowText
        p {{foo}}
    block bottomrow
    div.fullscreen(
      style="position:absolute;top:0;background-color:pink;"
      ng-style="{opacity : clicked ? '0.5' : '0.0', 'pointer-events': clicked ? 'auto' : 'none'}")
